<ul class="<%= class_name %>">
  <% for (var i in theme.menu){ %>
    <% 
      var clsName = "";
      if (is_post() && i == "Archive") {
        clsName = "active dotted";
      } else if (is_home() && i == "Home") {
        clsName = "active";
      } else if (is_archive() && i == "Archive") {
        clsName = "active";
      } else {
          if (theme.menu[i].substring(1)+"/index.html" == path) {
            clsName = "active";
          }
      }
    %>
  <li class="nav-item <%= clsName %>">
    <a class="nav-item-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
  </li>
  <% } %>
  <% for (var i in theme.menu_links){ %>
    <li class="nav-item">
      <a class="nav-item-link" target="_blank" href="<%- url_for(theme.menu_links[i]) %>">
        <%=i %> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-external-link"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
      </a>
    </li>
  <% } %>
</ul>